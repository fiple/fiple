                document.getElementById("auth").innerHTML = `${user.username + "#" + user.discriminator} <img src = "/userdata/avatar" style="margin-right:10px;margin-top:-10px;border-radius: 15px 15px 15px 15px;"\><div class="header - auth - dropdown"><a href="/oauth2/logout"><img src = "http://localhost:4000/images/logout.png" style="width:40px;height:40px;"\></div>`;
            }
        }
    </script>
